<h1 class="headline pt-4"><%=image_tag @giving.giving_avatar , {class: "rounded-circle mr-2"} if @giving.avatar.attached? %><%=@giving.name%></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th class="color">授業一覧</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th><%=link_to post.content, post_path(post), class:"link-green"%></th>
    </tr>
    <% end %>
  </tbody>
</table>
